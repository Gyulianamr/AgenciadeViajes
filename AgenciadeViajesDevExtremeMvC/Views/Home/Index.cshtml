@{
    ViewBag.Title = "Inicio";
}

<style>
    /* ============================
       ESTILOS GENERALES
       ============================ */

    /* Eliminar márgenes y paddings globales */
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background-color: #f9f9f9; /* Fondo claro para el resto de la página */
        overflow-x: hidden; /* Evitar desplazamiento horizontal */
    }

    /* Contenedor principal con la imagen de fondo */
    .home-overlay {
        background: url('@Url.Content("~/Content/playa1.jpg")') no-repeat center center;
        background-size: cover; /* Cubre un área específica del fondo */
        background-position: center center; /* Centra la imagen */
        height: 400px; /* Altura fija para evitar que ocupe toda la pantalla */
        width: 100%; /* Asegura que ocupe todo el ancho de la pantalla */
        display: flex;
        justify-content: center; /* Centra el contenido horizontalmente */
        align-items: center; /* Centra el contenido verticalmente */
        text-align: center;
        position: relative;
        box-sizing: border-box;
        overflow: hidden; /* Evita desbordamientos */
    }

    /* Estilo para el título */
    .home-overlay h1 {
        font-size: clamp(2rem, 5vw, 3rem); /* Tamaño responsivo basado en el ancho de la pantalla */
        color: white;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7); /* Sombra para legibilidad */
        margin-bottom: 1rem; /* Espacio debajo del título */
    }

    /* Estilo para el párrafo */
    .home-overlay p {
        font-size: clamp(1rem, 3vw, 1.5rem); /* Tamaño responsivo basado en el ancho de la pantalla */
        color: white;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
        margin-bottom: 2rem; /* Espacio debajo del párrafo */
    }

    /* Estilo de los botones */
    .home-overlay .btn {
        font-weight: bold;
        font-size: clamp(0.9rem, 2vw, 1.2rem); /* Tamaño responsivo basado en el ancho de la pantalla */
        padding: 10px 20px;
        border-radius: 25px;
        transition: transform 0.3s ease, background-color 0.3s ease; /* Animación de los botones */
        text-decoration: none;
        color: white;
    }

    /* Botones personalizados con tonos de verde */
        .home-overlay .btn-success {
            background-color: #388e3c; /* Verde claro */
            border: none;
        }

    .home-overlay .btn-success-dark {
        background-color: #388e3c; /* Verde más oscuro */
        border: none;
    }

        .home-overlay .btn-success-light {
            background-color: #388e3c; /* Verde más suave */
            border: none;
        }

    /* Efecto al pasar el mouse por los botones */
    .home-overlay .btn:hover {
        transform: scale(1.05); /* Efecto de aumento */
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.3); /* Sombra cuando se pasa el mouse */
        background-color: #87CEEB; /* Azul cielo cuando el mouse pasa por encima */
    }
</style>

<!-- Contenido sobre la imagen de fondo -->
<div class="home-overlay">
    <div>
        <h1 class="display-4">¡Bienvenido!</h1>
        <p class="lead">
            Maneja las Gestiones con Facilidad
        </p>

        <div class="mt-4">
            <a href="@Url.Action("Paquete", "Home")" class="btn btn-success m-2">Paquetes</a>
            <a href="@Url.Action("Reserva", "Home")" class="btn btn-success-dark m-2">Reservas</a>
            <a href="@Url.Action("Cotizacion", "Home")" class="btn btn-success-light m-2">Cotizaciones</a>
            <a href="@Url.Action("Cliente", "Home")" class="btn btn-success-dark m-2">Clientes</a>
            <a href="@Url.Action("Factura", "Home")" class="btn btn-success-light m-2">Facturas</a>
        </div>
    </div>
</div>
