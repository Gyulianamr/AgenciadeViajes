@{
    ViewData["Title"] = "AgentedeViaje";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> Gesti&oacute;n de Agentes de Viajes</h2>

@(Html.DevExtreme().DataGrid<AgenciadeViajesDevExtremeMvC.Models.AgentedeViaje>()
    .DataSource(ds => ds.WebApi()
        .Controller("AgentedeViaje")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("Id")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.FechaContratacion);

        columns.AddFor(m => m.HoraLlegada);

        columns.AddFor(m => m.HoraSalida);

        columns.AddFor(m => m.Salario);

        columns.AddFor(m => m.Id);

        columns.AddFor(m => m.Nombre);

        columns.AddFor(m => m.Apellido);

        columns.AddFor(m => m.Telefono);

        columns.AddFor(m => m.Correo);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
)
